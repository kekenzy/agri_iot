{
  "family": "agri-iot-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::440707461121:role/agri-iot-ecs-task-execution-role",
  "taskRoleArn": "arn:aws:iam::440707461121:role/agri-iot-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "agri-iot-app",
      "image": "440707461121.dkr.ecr.ap-northeast-1.amazonaws.com/agri-iot:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "agri_iot.settings.production"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-northeast-1"
        },
        {
          "name": "AWS_STORAGE_BUCKET_NAME",
          "value": "agri-capture"
        },
        {
          "name": "AWS_S3_REGION_NAME",
          "value": "ap-northeast-1"
        },
        {
          "name": "AWS_SES_REGION_NAME",
          "value": "ap-northeast-1"
        },
        {
          "name": "DEFAULT_FROM_EMAIL",
          "value": "kekenzy@gmail.com"
        },
        {
          "name": "DATABASE_URL",
          "value": "${DATABASE_URL}"
        },
        {
          "name": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "${AWS_ACCESS_KEY_ID}"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "${AWS_SECRET_ACCESS_KEY}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/agri-iot-app",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health/ || exit 1"
        ],
        "interval": 120,
        "timeout": 30,
        "retries": 5,
        "startPeriod": 180
      }
    }
  ]
} 