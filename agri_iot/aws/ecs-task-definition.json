        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "AKIAWNHBWGAAVHMPGRL5"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "TGygY7OjUcesN0WEDutX0yTF4ZJGaxZUXTtiO6TH"
        },
        {
          "name": "EMAIL_HOST",
          "value": "email-smtp.ap-northeast-1.amazonaws.com"
        },
        {
          "name": "EMAIL_PORT",
          "value": "587"
        },
        {
          "name": "EMAIL_USE_TLS",
          "value": "True"
        },
        {
          "name": "EMAIL_HOST_USER",
          "value": "AKIAWNHBWGAAVHMPGRL5"
