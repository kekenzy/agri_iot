      ],
      "essential": true,
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "agri_iot.settings.production"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-northeast-1"
        },
        {
          "name": "AWS_STORAGE_BUCKET_NAME",
          "value": "agri-capture"
        },
        {
          "name": "AWS_S3_REGION_NAME",
          "value": "ap-northeast-1"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://agri_user:agri_password@agri-iot-db.ceswvgqkwv57.ap-northeast-1.rds.amazonaws.com:5432/agri_db"
        },
        {
